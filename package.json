{
    "name": "alloy-worker",
    "version": "0.1.0",
    "description": "面向事务的高可用 Web Worker 通信框架",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "cross-env NODE_ENV=development node ./script/build.js",
        "dist": "cross-env NODE_ENV=production node ./script/build.js",
        "dev:worker": "cross-env NODE_ENV=development node ./script/build-worker.js",
        "dist:worker": "cross-env NODE_ENV=production node ./script/build-worker.js",
        "commit": "git-cz",
        "prettier": "prettier --write 'src/**/*.{js,ts}'"
    },
    "keywords": [
        "Web",
        "Worker",
        "Channel",
        "Message"
    ],
    "author": "CntChen",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "commitizen": "^4.0.3",
        "cross-env": "^7.0.2",
        "cz-conventional-changelog": "^3.1.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.9",
        "prettier": "^2.0.2",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0",
        "webpack-manifest-plugin": "^2.2.0"
    },
    "dependencies": {},
    "lint-staged": {
        "src/**/*.{js,ts}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
